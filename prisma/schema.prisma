generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  role      String
  passwordHash String
  qrCodeURL String?
  affiliate Affiliate?
  superAffiliator SuperAffiliator?
  createdAt DateTime   @default(now())
  accounts  Account[]
  sessions  Session[]
  issueReports IssueReport[]
}

model Affiliate {
  id           String          @id @default(cuid())
  userId       String          @unique
  couponCode   String          @unique
  referralLink String          @unique
  tokenBalance Int             @default(0)
  superAffiliatorId String?
  createdAt    DateTime        @default(now())
  leads        Student[]
  payouts      PayoutRequest[]
  user         User            @relation(fields: [userId], references: [id])
  superAffiliator SuperAffiliator? @relation(fields: [superAffiliatorId], references: [id])
}

model Student {
  id           String    @id @default(cuid())
  name         String
  email        String
  phone        String?
  courseName   String?  @map("course")
  courseCategory String
  courseSlug   String?
  affiliatorId String
  leadStatus   String    @default("untouched")
  affiliator   Affiliate @relation(fields: [affiliatorId], references: [id])
}

model CourseCommission {
  id                     String   @id @default(cuid())
  slug                   String   @unique
  name                   String
  category               String
  durationLabel          String
  actualFees             Int
  generalDiscountedFees  Int
  generalDiscountTarget  Int
  affiliationDiscount    Int
  affiliatorTokens       Int
  superAffiliatorTokens  Int
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model PayoutRequest {
  id                String    @id @default(cuid())
  affiliatorId      String?
  superAffiliatorId String?
  amount            Int
  status            String    @default("pending")
  createdAt         DateTime  @default(now())
  qrCodeURL         String?
  affiliator        Affiliate?       @relation(fields: [affiliatorId], references: [id])
  superAffiliator   SuperAffiliator? @relation(fields: [superAffiliatorId], references: [id])
}

model SuperAffiliator {
  id           String    @id @default(cuid())
  userId       String    @unique
  referralCode String    @unique
  tokenBalance Int       @default(0)
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id])
  affiliators  Affiliate[]
  payouts      PayoutRequest[]
}

model IssueReport {
  id            String   @id @default(cuid())
  userId        String
  role          String
  topic         String
  description   String
  leadCount     Int?
  daysUntouched Int?
  status        String   @default("open")
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])

  @@index([topic])
  @@index([status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
